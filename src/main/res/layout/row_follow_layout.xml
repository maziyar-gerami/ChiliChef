<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_FollowLin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layoutDirection="rtl">

    <android.support.v7.widget.CardView
        android:id="@+id/follow_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        app:cardElevation="2dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/follow_userImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_gravity="center"
                android:background="@drawable/ic_user_image_woman"
                app:civ_border_color="@color/colorPrimary"
                app:civ_border_width="2dp"/>


            <TextView
                android:id="@+id/follow_followBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:background="@color/colorPrimary"/>

            <TextView
                android:id="@+id/follow_name"
                style="@style/AllText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/follow_userImage"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:textColor="@color/colorAccent"
                android:textSize="15sp" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>