<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/Layout_food"
    android:layoutDirection="rtl"
    >

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/CardViewFood"
        android:layout_margin="2dp"
        app:cardElevation="2dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:scaleType="fitXY"
            android:id="@+id/image_food"
            />

    </LinearLayout>


        <TextView
            android:id="@+id/titleFood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:textSize="15sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/image_sender_recipes"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name_sender_recipes"
                android:layout_centerVertical="true"
                android:layout_marginStart="2dp"
                android:textColor="@color/colorAccent"
                android:layout_toEndOf="@id/image_sender_recipes"/>


            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Like_food"
                android:background="@android:color/transparent"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_likea_cons"/>


            <TextView
                android:id="@+id/count_Like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/Like_food"
                android:layout_centerVertical="true"
                android:textColor="@color/colorAccent"
                android:layout_centerHorizontal="true"/>




        </RelativeLayout>

</LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>