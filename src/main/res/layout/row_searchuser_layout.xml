<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl"
    android:id="@+id/main_FollowLin">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/SearchUser_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        app:cardElevation="2dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_user_image_men"
                android:layout_gravity="center"
                android:id="@+id/SearchUser_userImage"
                android:layout_alignParentEnd="true"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:id="@+id/SearchUser_btn"
                android:layout_centerVertical="true"
                android:text="مشاهده صفحه کاربر"
                android:textColor="@color/colorAccent"

                />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_centerHorizontal="true"
                android:id="@+id/SearchUser_name"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorAccent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/SearchUser_name"
                android:id="@+id/SearchUser_score"
                android:layout_marginBottom="5dp"
                android:textColor="@color/colorAccent"/>

            <TextView
                android:id="@+id/TV_searchUser_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/SearchUser_name"
                android:layout_toStartOf="@id/SearchUser_score"
            android:textSize="15sp"
                android:textColor="@color/colorAccent"
                android:text="رتبه:"/>

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>