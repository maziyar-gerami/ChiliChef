<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recipes_main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    >
    <!--app:layoutManager="android.support.v7.widget.LinearLayoutManager">-->

    <android.support.v7.widget.CardView
        android:id="@+id/user_cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        app:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="170dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/user_foodImage"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginBottom="5dp"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/user_imageTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_foodImage"
                android:textColor="@color/colorAccent"
                android:paddingEnd="5dp"
                android:paddingStart="5dp"
                />

            <ImageView
                android:id="@+id/user_DislikeImage"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/user_foodImage"
                android:src="@drawable/ic_likea_cons" />


            <!--<ImageView-->
            <!--android:id="@+id/user_likeImage"-->
            <!--android:layout_width="30dp"-->
            <!--android:layout_height="30dp"-->
            <!--android:layout_alignParentEnd="true_email"-->
            <!--android:layout_below="@id/user_foodImage"-->
            <!--android:src="@drawable/full_like"-->
            <!--android:visibility="invisible" />-->


            <TextView
                android:id="@+id/user_numberOfLikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_foodImage"
                android:textColor="@color/colorAccent"
                android:layout_toStartOf="@id/user_DislikeImage"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>